{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "jsx": "react",
    /* Linting */
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/*": ["*"],
      "@modules/*": ["modules/*"],
      "@appComponents/*": ["modules/app/components/*"],
      "@constants/*": ["modules/app/constants/*"],
      "@utils/*": ["utils/*"]
    },
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "references": [
    {
      "path": "tsconfig.json"
    }
  ]
}